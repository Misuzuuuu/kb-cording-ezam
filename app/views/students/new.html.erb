<h1>新規投稿</h1>
<br>
<%= form_for @student do |f| %>
    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, :size => 140 %>
    </div>
<br>
    <div class="field">
        <%= f.label :profile %>
        <%= f.text_field :profile, :size => 140 %>
    </div>
<br>
    <div class="field">
        <%= f.label :mentor %>
        <%= f.text_field :mentor, :size => 140 %>
    </div>
<br>
    <div class="field">
        <%= f.label :grade %>
        <%= f.text_field :grade, :size => 140 %>
    </div>
<br>
    <%= f.submit "投稿する" %>
<% end %>